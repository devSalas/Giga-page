---
  interface Props{
    img: string
    text: string
    title:string 
  }

  const { img, text,title } = Astro.props;

---

<div class="w-full sm:max-w-64 sm:h-[324px]  flex sm:flex-col gap-4 bg-fifth p-4 py-4 sm:py-8 rounded-lg">
    <figure>
        <img src={img} alt="" class="min-w-10 max-h-20">
    </figure>
    <div>
        <h3 class="font-bold">{title}</h3>
        <p>
            {text}
        </p>

    </div>


</div>