                TypeBusiness.map((business) => (
                    <a
                        href={business.redirect}
                        class="flex gap-1 justify-center items-center"
                    >
                        <img src={business.image} alt="" class="h-[20px]" />{" "}
                        {business.name}
                    </a>
                ))
            }
        </nav>
        <nav class="hidden md:flex md:justify-center md:items-center gap-8 text-sm">
            <a
                href="https://www.facebook.com/Gigamas.pe"
